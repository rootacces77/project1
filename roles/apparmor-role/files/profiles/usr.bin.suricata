# /etc/apparmor.d/usr.bin.suricata
#include <tunables/global>

/usr/bin/suricata {
  # Allow read access to Suricata config
  /etc/suricata/** r,
  /usr/bin/suricata ix,

  # Log directory
  /var/log/suricata/** rw,

  # Rules and runtime files
  /var/lib/suricata/** r,

  # Network access
  capability net_admin,
  network inet raw,
  network packet,

  # Other general rules
  /usr/share/suricata/** r,
  /dev/null rw,
  /dev/stdout rw,
  /dev/random r,
}
